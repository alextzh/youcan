.box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}
.search_box{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.search_box .search{
  display: flex;
  align-items: center;
  width: 100%;
  height: 60rpx;
  padding: 10rpx;
  background: #f7f7f7;
  border-radius: 4px;
  box-sizing: border-box;
}
.search_box input{
  width: 100%;
  padding: 0 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
}
.search_box icon{
  line-height: 60rpx;
  color: #005faf;
  font-size: 36rpx;
}
.search_box .close{
  display: none;
}
.form_area{
  position: relative;
  width: 100%;
}
.list{
  padding-top: 20rpx;
  padding-bottom: 100rpx;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item{
  width: 100%;
  display: flex;
  align-items: center;
  padding:0 20rpx;
  box-sizing: border-box;
}
.item label{
  width: 100%;
  display:flex;
  align-items:center;
  justify-content:center;
  line-height:80rpx;
  height:110rpx;
  border-bottom:1px solid #ccc;
}
.item:last-child label{
  border-bottom: 0 none;
}
.cbx_font{
  font-size: 28rpx;
  flex-direction: row;
  width: 100%;
  display: flex;
}
.base_info{
  display: flex;
  flex-direction: column;
  width: 50%;
}
.base_info>text{
  height:40rpx;
  line-height: 40rpx;
}
.form_btn{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
}