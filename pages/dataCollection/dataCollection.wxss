.item_info{
  display: flex;
  flex-direction:column;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.item_head{
  width: 100%;
  display: flex;
  align-items: center;
  line-height: 60rpx;
}
.item_head icon{
  color: #FF7302;
  font-size: 36rpx;
}
.item_head .title{
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #212121;
}
.item_body{
  display: flex;
  line-height: 50rpx;
}
.item__left,.item__right{
  flex: 1;
  color: #333;
  display: flex;
  align-items: center;
  width: 50%;
}
.new_data,.all_data{
  font-size: 28rpx;
  color: #FF7302;
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.form_area{
  width: 100%;
}
.m_item{
  padding-top: 20rpx;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.m_title{
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  align-items: center;
  justify-content: center;
  background: #dfdfdf;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.m_title>icon{
  font-size: 30rpx;
  color:#FF7302;
  padding-right:10rpx;
}
.m_title>text{
  flex: 1;
  font-size:30rpx;
  color:#FF7302;
}
.item_box{
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  width:100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.item_i{
  display:flex;
  align-items:center;
  flex:1;
  width:100%;
  height:80rpx;
}
.input_area {
  width: 100%;
  flex: 1;
  display:flex;
  align-items:center;
  height:80rpx;
  padding:0 20rpx;
  box-sizing:border-box;
}
.input_con {
  display:flex;
  box-sizing:border-box;
  height:80rpx;
  flex:1;
  align-items:center;
}
.btn_area{
  margin: 30rpx 0;
  padding:0 20rpx;
}
.editbox{
  position: relative;
  width: 100%;
  padding: 5px;
  box-sizing: border-box;
}
.editbox::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
